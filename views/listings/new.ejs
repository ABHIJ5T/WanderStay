<% layout("/layouts/boilerplate") %>
<body>
<div class="row">
<div class="col-8 offset-2">
    <br> </br>
    <h3>Create a New Listing</h3>
   
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
<div class="mb-3">
    <lable for="title" class="form-lable">Title</lable>
    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
    <div class="valid-feedback">Title looks good!</div>
</div>   
  
 <div class="mb-3">
    <lable for="description" class="form-lable">Description</lable>
    <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
    <div class="invalid-feedback">please enter a short description.</div>
    
 </div> 

 <!-- <div class="mb-3">
    <lable for="image" class="form-lable">Image link</lable>
    <input name="listing[image][url]" placeholder="enter image url/link" type="text" class="form-control">
    <div class="invalid-feedback">please enter a valid URL!</div>
    
 </div> -->
 <div class="mb-3">
    <lable for="image" class="form-lable">Upload Image</lable>
    <input name="listing[image]" type="file" class="form-control">
    <div class="invalid-feedback">please enter a valid URL!</div>
    required
 </div>
 <div class="row">
   
   <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">Price</lable>
        <input name="listing[price]" placeholder="enter price" type="number"class="form-control" required>
        <div class="invalid-feedback">please enter a valid price!</div>
     </div>
 
   <div class="mb-3 col-md-8">
    <lable for="country" class="form-lable">Country</lable>
    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
    <div class="invalid-feedback">please enter valid country name.</div>
     </div> 
 </div>
 
  
 <div class="mb-3">
    <lable for="location" class="form-lable">Location</lable>
    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
    <div class="invalid-feedback">please enter valid location.</div>
   </div>
  
 <div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select name="listing[category]" class="form-control" required>
    <option value="Trending">Trending</option>
    <option value="Rooms">Rooms</option>
    <option value="Iconic Cities">Iconic Cities</option>
    <option value="Camping">Camping</option>
    <option value="Farms">Farms</option>
    <option value="Mountains">Mountains</option>
    <option value="Castle">Castle</option>
    <option value="Artic">Artic</option>
  </select>
</div>


    <button class="btn btn-dark add-btn">add</button>
    
    </form>
    <br></br>
</div>
</div>
</body>

